<Page x:Class="OnMed.Desktop.Pages.ForgotPasswordPages.EnterNewPassword"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OnMed.Desktop.Pages.ForgotPasswordPages"
      mc:Ignorable="d" 
      Title="EnterNewPassword">

    <Grid>
        <StackPanel
            Orientation="Vertical"
        >
            <Label 
            Margin="0 30"
            FontWeight="SemiBold"
            FontSize="20"
            HorizontalAlignment="Center"
            Content="Kodni o'ylab toping"/>
            <Border
                Width="250"
                MouseEnter="Border_MouseEnter_1"
                MouseLeave="Border_MouseLeave_1"
                CornerRadius="5"
                Background="#F2F2F2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="0.5"/>
                    </Grid.RowDefinitions>
                    <Grid
                                Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="40"/>
                        </Grid.ColumnDefinitions>
                        <PasswordBox
                            x:Name="textboxParol"
                            Grid.Column="0"
                            Margin="10 0"
                            FontSize="18"
                            Width="190"
                            HorizontalAlignment="Center"
                            BorderThickness="0"
                            VerticalAlignment="Center"
                            FontWeight="SemiBold"
                            Foreground="Black"
                            Background="Transparent">
                        </PasswordBox>
                        <TextBox 
                            x:Name="textboxParolText"
                            Grid.Column="0"
                            Visibility="Collapsed"
                            HorizontalAlignment="Center"
                            Margin="10 0"
                            FontSize="18"
                            Width="190"
                            BorderThickness="0"
                            VerticalAlignment="Center"
                            FontWeight="SemiBold"
                            Foreground="Black"
                            Background="Transparent">
                        </TextBox>
                        <Border Grid.Column="1">
                            <Button x:Name="showPassword"
                                            Click="showPassword_Click"
                                            Style="{DynamicResource showPasswordButton}">

                            </Button>
                        </Border>
                    </Grid>
                    <Border
                        Grid.Row="1"
                        Margin="5 0"
                        x:Name="Parolborder"
                        Background="{DynamicResource color}">
                    </Border>
                </Grid>
            </Border>

            <Button
                Content="Saqlash"
                Width="250"
                Height="35"
                Margin="0 40"
                FontSize="18"
                Click="Button_Click"
                Style="{DynamicResource LoginButton}"/>
        </StackPanel>

    </Grid>
</Page>
