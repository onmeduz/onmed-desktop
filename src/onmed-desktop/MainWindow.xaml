<Window x:Class="onmed_desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:onmed_desktop"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent"
        Title="MainWindow" Height="700" Width="700">
    <Grid>
        <TabControl 
            x:Name="mainControl">
            <TabItem Header="Log In"
                     Visibility="Collapsed">
                <Grid Background="#C8C4E8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="150"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0"
                                x:Name="borderDragable"
                                MouseDown="borderDragable_MouseDown" 
                                Cursor="ScrollAll" >

                        </Border>
                        <StackPanel Grid.Column="1"
                                    Orientation="Horizontal">

                            <Button x:Name="btnMinimized" Click="btnMinimize_Click" Style="{DynamicResource MinimizedButton}"/>
                            <Button x:Name="btnMaximize"  Click="btnMaximize_Click" Style="{DynamicResource MaximizedButton}"/>
                            <Button x:Name="btnClose"     Click="btnClose_Click"    Style="{DynamicResource ClosedButton}"/>

                        </StackPanel>


                    </Grid>

                    <Label 
                        Grid.Row="1"
                        Content="Admin Login"
                        HorizontalContentAlignment="Center"
                        FontSize="35"
                        FontWeight="SemiBold"
                        Margin="0 20"
                        Foreground="{DynamicResource PrimaryTextColor}"/>

                    <Border
                        Grid.Row="1"
                        Height="350"
                        Width="300"
                        CornerRadius="20"
                        BorderThickness="1"
                        BorderBrush="Gray">
                        <Border.Effect>
                            <DropShadowEffect Color="#064585" Direction="270" ShadowDepth="10" BlurRadius="20"/>
                        </Border.Effect>
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#636EB1" Offset="0.0" />
                                <GradientStop Color="#6ED9FC" Offset="0.45" />
                                <GradientStop Color="#6ED9FC" Offset="0.75" />
                                <GradientStop Color="#636EB1" Offset="1.0" />
                            </LinearGradientBrush>
                        </Border.Background>

                        <StackPanel 
                            Orientation="Vertical"
                            Margin="0 80 0 0">
                            <Label Content="Phone number"
                                   Margin="50 0"
                                   FontSize="13"
                                   Foreground="{DynamicResource PrimaryTextColor}"/>
                            <Border
                                BorderBrush="Gray"
                                BorderThickness="1"
                                Height="35"
                                Width="200"
                                Margin="0 0 0 10"
                                CornerRadius="10">

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="45"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Label
                                        Grid.Column="0"
                                        Width="50"
                                        Margin="5 0 0 0"
                                        Content="+998"
                                        FontSize="14"
                                        FontWeight="SemiBold"
                                        VerticalContentAlignment="Center"/>

                                    <TextBox 
                                        Grid.Column="1"
                                        Foreground="{DynamicResource PrimaryTextColor}"
                                        Margin="3 5 5 5"
                                        FontSize="14"
                                        FontWeight="SemiBold"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        VerticalAlignment="Center">
                                    </TextBox>
                                </Grid>

                            </Border>
                            <Label Content="Password"
                                   Margin="50 0"
                                   FontSize="13"
                                   Foreground="{DynamicResource PrimaryTextColor}"/>
                            <Border 
                                BorderBrush="Gray"
                                BorderThickness="1"
                                Height="35"
                                Width="200"
                                Margin="0 0 0 50"
                                CornerRadius="10">

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="40"/>
                                    </Grid.ColumnDefinitions>

                                    <PasswordBox
                                        Grid.Column="0"
                                        Margin="10 5"
                                        FontSize="14"
                                        Foreground="{DynamicResource PrimaryTextColor}"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        VerticalAlignment="Center">
                                    </PasswordBox>

                                </Grid>

                            </Border>

                            <Button 
                                Style="{DynamicResource SaveButton}"
                                Content="Login"
                                FontSize="17"
                                Width="100"
                                Height="35"
                                Margin="0"
                                Click="btnLogin"/>
                        </StackPanel>
                        

                    </Border>
                    <Border
                        Grid.Row="1"
                        Width="100"
                        Height="100"
                        Background="WhiteSmoke"
                        Margin="0 10 0 350"
                        CornerRadius="80"
                        BorderThickness="2"
                        BorderBrush="Gray">
                        <Image Source="/Assets/Icons/free-icon-user-747545.png" 
                               Height="50"/>


                    </Border>
                </Grid>

            </TabItem>

            <TabItem 
                Header="Dashboard"
                Visibility="Collapsed">
                <Button Height="50"
                        Width="50">
                </Button>

            </TabItem>
            
        </TabControl>


    </Grid>
</Window>
